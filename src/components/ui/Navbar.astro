---
import Logo from './Logo.svelte';
---

<nav class="fixed top-0 left-0 w-full z-50 transition-all duration-300 border-b border-white/5 bg-void/90 backdrop-blur-xl h-28">
  
  <div class="container mx-auto px-6 h-full flex justify-between items-center">
    
    <a href="#" class="group flex items-center gap-5" aria-label="Home">
      
      <div class="relative w-14 h-14 shrink-0">
         <div class="absolute inset-0 bg-lime/20 blur-xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
         <Logo class="text-white group-hover:text-lime transition-colors duration-300" />
      </div>
      
      <div class="flex flex-col justify-center">
        <span class="font-display font-bold text-2xl md:text-3xl leading-none text-white tracking-tight group-hover:text-lime transition-colors duration-300">
            KAMIL KOWALCZUK
        </span>
        
        <span class="font-mono text-[10px] md:text-xs text-subtext uppercase tracking-[0.25em] group-hover:text-white transition-colors duration-300 mt-1.5">
            Growth Engineer
        </span>
      </div>
    </a>

    <div class="hidden md:flex items-center gap-10">
      <a href="#about" class="text-xs font-mono text-subtext hover:text-white hover:tracking-widest transition-all duration-300 uppercase">
        O Mnie
      </a>
      <a href="#projects" class="text-xs font-mono text-subtext hover:text-white hover:tracking-widest transition-all duration-300 uppercase">
        Projekty
      </a>
      <a href="#toolkit" class="text-xs font-mono text-subtext hover:text-white hover:tracking-widest transition-all duration-300 uppercase">
        Toolkit
      </a>

      <div class="w-px h-6 bg-white/10"></div>

      <a href="#contact" class="group relative px-8 py-3 overflow-hidden border border-white/10 hover:border-lime/50 transition-colors bg-white/5">
        <div class="absolute inset-0 bg-lime/10 translate-y-full group-hover:translate-y-0 transition-transform duration-300"></div>
        <span class="relative font-mono text-xs text-lime uppercase tracking-widest font-bold">
            Start Project
        </span>
      </a>
    </div>

    <button class="md:hidden text-white p-2 hover:text-lime transition-colors">
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="4" x2="20" y1="12" y2="12"/><line x1="4" x2="20" y1="6" y2="6"/><line x1="4" x2="20" y1="18" y2="18"/></svg>
    </button>

  </div>
</nav>