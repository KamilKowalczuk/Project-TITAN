---
import Button from '../ui/Button.astro';

const DownloadIcon = `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/><polyline points="7 10 12 15 17 10"/><line x1="12" x2="12" y1="15" y2="3"/></svg>`;
const SendIcon = `<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="22" y1="2" x2="11" y2="13"></line><polygon points="22 2 15 22 11 13 2 9 22 2"></polygon></svg>`;
const LoadingIcon = `<svg class="animate-spin" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 12a9 9 0 1 1-6.219-8.56"/></svg>`;
const CheckIcon = `<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"/></svg>`;
---

<section id="contact" class="py-32 bg-void relative border-t border-white/5">
  
  <div class="container mx-auto px-6">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-20">
      
      <div>
        <h2 class="text-4xl md:text-6xl font-display font-bold text-white mb-6">
          LET'S <span class="text-lime">BUILD</span>.
        </h2>
        <p class="text-subtext font-mono text-sm md:text-base mb-12 leading-relaxed border-l-2 border-lime/50 pl-6">
          > Szukasz inżyniera, który rozumie biznes? <br/>
          > Potrzebujesz systemu, a nie tylko strony? <br/>
          > Zbudujmy coś, co zdominuje Twoją niszę.
        </p>

        <div class="mb-12 space-y-6">
            
            <div class="group">
                <p class="text-[10px] font-mono text-subtext uppercase tracking-widest mb-1">Direct Uplink (Email)</p>
                <a href="mailto:kontakt@kamilkowalczuk.pl" class="text-xl md:text-2xl text-white font-display font-bold hover:text-lime transition-colors">
                    kontakt@kamilkowalczuk.pl
                </a>
            </div>

            <div>
                <p class="text-[10px] font-mono text-subtext uppercase tracking-widest mb-3">Social Intelligence</p>
                <div class="flex gap-6">
                    <a href="https://linkedin.com/in/kamilkowalczuk" target="_blank" class="text-white hover:text-lime transition-colors font-mono uppercase text-sm tracking-widest border-b border-transparent hover:border-lime pb-0.5">
                        LinkedIn
                    </a>
                    <a href="https://github.com/KamilKowalczuk" target="_blank" class="text-white hover:text-lime transition-colors font-mono uppercase text-sm tracking-widest border-b border-transparent hover:border-lime pb-0.5">
                        GitHub
                    </a>
                </div>
            </div>

            <div class="pt-6">
                <div class="inline-flex items-center gap-2 px-3 py-1 bg-lime/10 border border-lime/20 rounded-full">
                    <span class="w-2 h-2 bg-lime rounded-full animate-pulse"></span>
                    <span class="text-[10px] font-mono text-lime uppercase tracking-widest">Accepting New Contracts</span>
                </div>
            </div>
        </div>

        <div class="bg-surface border border-white/10 p-8 relative group overflow-hidden max-w-md mt-12">
          <div class="absolute top-0 left-0 w-1 h-full bg-lime/50 group-hover:bg-lime transition-colors"></div>
          
          <div class="flex justify-between items-start mb-8">
            <div>
              <h3 class="text-white font-bold text-xl mb-1">Kamil Kowalczuk</h3>
              <p class="text-xs font-mono text-subtext uppercase tracking-widest">Full-Stack Growth Engineer</p>
            </div>
            <div class="w-12 h-12 bg-white p-1">
                <div class="w-full h-full bg-black flex items-center justify-center">
                    <span class="text-[8px] text-white font-mono text-center leading-none">SCAN<br/>ME</span>
                </div> 
            </div>
          </div>

          <div class="flex items-center justify-between mt-8 pt-8 border-t border-white/5">
             <div class="text-[10px] font-mono text-subtext">
                FILE: CV_2025_PL.PDF <br/>
                STATUS: DECLASSIFIED
             </div>
             <Button href="/cv.pdf" variant="primary" target="_blank" class="text-xs px-4 py-2">
                Pobierz
                <span set:html={DownloadIcon} />
             </Button>
          </div>
        </div>

      </div>

      <div class="relative">
        <form id="contact-form" class="space-y-8 bg-surface/30 p-8 border border-white/5 backdrop-blur-sm">
            
            <input type="checkbox" name="botcheck" class="hidden" style="display: none;">

            <div class="group relative">
                <input type="text" name="name" id="name" required 
                       class="w-full bg-transparent border-b border-white/20 py-4 text-white font-mono focus:outline-none focus:border-lime transition-colors peer placeholder-transparent" 
                       placeholder="Imię" />
                <label for="name" class="absolute left-0  text-subtext transition-all peer-focus:-top-4 peer-focus:text-xs peer-focus:text-lime peer-placeholder-shown:top-4 peer-placeholder-shown:text-sm peer-placeholder-shown:text-subtext -top-4 text-xs">
                    Imię / Firma
                </label>
            </div>

            <div class="group relative">
                <input type="email" name="email" id="email" required 
                       class="w-full bg-transparent border-b border-white/20 py-4 text-white font-mono focus:outline-none focus:border-lime transition-colors peer placeholder-transparent" 
                       placeholder="Email" />
                <label for="email" class="absolute left-0 text-subtext transition-all peer-focus:-top-4 peer-focus:text-xs peer-focus:text-lime peer-placeholder-shown:top-4 peer-placeholder-shown:text-sm peer-placeholder-shown:text-subtext -top-4 text-xs">
                    Adres Email
                </label>
            </div>

            <div class="group relative">
                <label for="type" class="block text-xs text-subtext mb-2 font-mono uppercase tracking-widest group-focus-within:text-lime">Typ Projektu</label>
                <select name="project_type" id="type" class="w-full bg-surface border border-white/10 text-white p-4 font-mono text-sm focus:outline-none focus:border-lime transition-colors appearance-none cursor-pointer hover:border-white/30">
                    <option value="Nie wybrano">Wybierz temat...</option>
                    <option value="Oferta Pracy">Oferta Pracy</option>
                    <option value="E-commerce">E-commerce / Sklep</option>
                    <option value="Web App">Aplikacja Webowa / Platforma</option>
                    <option value="AI Automation">Automatyzacja AI</option>
                    <option value="Consulting">Consulting / Inne</option>
                </select>
                <div class="absolute right-4 bottom-4 pointer-events-none text-lime">
                    <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M6 9l6 6 6-6"/></svg>
                </div>
            </div>

            <div class="group relative">
                <textarea name="message" id="message" rows="4" required 
                       class="w-full bg-transparent border-b border-white/20 py-4 text-white font-mono focus:outline-none focus:border-lime transition-colors peer placeholder-transparent resize-none" 
                       placeholder="Wiadomość"></textarea>
                <label for="message" class="absolute left-0 text-subtext transition-all peer-focus:-top-4 peer-focus:text-xs peer-focus:text-lime peer-placeholder-shown:top-4 peer-placeholder-shown:text-sm peer-placeholder-shown:text-subtext -top-4 text-xs">
                    Opisz problem do rozwiązania...
                </label>
            </div>

            <div class="pt-4">
                <button type="submit" id="submit-btn" class="group relative inline-flex items-center justify-center px-8 py-4 font-mono text-sm uppercase tracking-widest bg-lime text-void font-bold hover:bg-white transition-all duration-300 w-full md:w-auto cursor-pointer border-none disabled:opacity-50 disabled:cursor-not-allowed">
                    <span class="absolute top-0 right-0 w-2 h-2 bg-void group-hover:bg-lime transition-colors"></span>
                    
                    <span id="btn-text">Nadaj Wiadomość</span>
                    <span id="btn-icon" class="ml-2 group-hover:translate-x-1 transition-transform" set:html={SendIcon} />
                    
                    <span id="btn-loading" class="hidden" set:html={LoadingIcon} />
                    <span id="btn-success" class="hidden items-center gap-2">Wysłano <span set:html={CheckIcon}/></span>
                </button>
                <p id="result-message" class="text-xs font-mono mt-4 text-lime hidden"></p>
            </div>

        </form>
      </div>

    </div>

    <div class="mt-32 pt-8 border-t border-white/5 flex flex-col md:flex-row justify-between items-center text-[10px] font-mono text-subtext uppercase tracking-widest">
        <div>
            &copy; 2025 Kamil Kowalczuk. All Systems Operational.
        </div>
        <div class="mt-4 md:mt-0 flex gap-4">
            <span class="hover:text-lime cursor-pointer transition-colors">Privacy Protocol</span>
            <span>::</span>
            <span class="hover:text-lime cursor-pointer transition-colors">Terms of Service</span>
        </div>
    </div>

  </div>
</section>

<script is:inline>
  // Logika formularza (Taka sama jak wcześniej)
  const form = document.getElementById('contact-form');
  const submitBtn = document.getElementById('submit-btn');
  const btnText = document.getElementById('btn-text');
  const btnIcon = document.getElementById('btn-icon');
  const btnLoading = document.getElementById('btn-loading');
  const btnSuccess = document.getElementById('btn-success');
  const resultMessage = document.getElementById('result-message');

  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    submitBtn.disabled = true;
    btnText.classList.add('hidden');
    btnIcon.classList.add('hidden');
    btnLoading.classList.remove('hidden');

    const formData = new FormData(form);
    // UWAGA: Upewnij się, że masz zdefiniowane PUBLIC_WEB3FORMS_KEY w pliku .env
    formData.append("access_key", import.meta.env.PUBLIC_WEB3FORMS_KEY);

    try {
      const response = await fetch("https://api.web3forms.com/submit", {
        method: "POST",
        body: formData
      });
      const data = await response.json();

      if (data.success) {
        btnLoading.classList.add('hidden');
        btnSuccess.classList.remove('hidden');
        resultMessage.innerText = "> TRANSMISSION_SUCCESSFUL: Wiadomość dotarła do HQ.";
        resultMessage.classList.remove('hidden');
        resultMessage.classList.add('text-lime');
        form.reset();
        setTimeout(() => {
            btnSuccess.classList.add('hidden');
            btnText.classList.remove('hidden');
            btnIcon.classList.remove('hidden');
            submitBtn.disabled = false;
            resultMessage.classList.add('hidden');
        }, 5000);
      } else {
        throw new Error(data.message);
      }
    } catch (error) {
      btnLoading.classList.add('hidden');
      btnText.innerText = "Błąd";
      btnText.classList.remove('hidden');
      submitBtn.disabled = false;
      resultMessage.innerText = "> ERROR: " + error.message;
      resultMessage.classList.remove('hidden');
      resultMessage.classList.remove('text-lime');
      resultMessage.classList.add('text-red-500');
    }
  });
</script>