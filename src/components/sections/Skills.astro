---
import skills from '../../data/skills.json';

// Style bazowe karty
const BoxStyles = "bg-surface border border-white/5 p-8 relative overflow-hidden group hover:border-lime/30 transition-all duration-500 flex flex-col justify-between";
const TitleStyles = "font-display text-2xl font-bold text-white mb-2 group-hover:text-lime transition-colors z-10 relative";
const DescStyles = "font-mono text-xs text-subtext mb-6 z-10 relative";
const TagStyles = "inline-flex items-center px-3 py-1.5 bg-white/5 border border-white/10 text-xs font-mono text-white/80 mr-2 mb-2 rounded-sm hover:bg-lime/10 hover:border-lime/30 hover:text-lime transition-all cursor-default z-10 relative";

// Komponent Narożników (CZYSTA WERSJA - BEZ SCANLINII)
const TechCorners = `
  <div class="absolute top-0 right-0 w-3 h-3 border-t border-r border-white/20 group-hover:border-lime transition-colors duration-300 z-0"></div>
  
  <div class="absolute bottom-0 right-0 w-3 h-3 border-b border-r border-white/20 group-hover:border-lime transition-colors duration-300 z-0"></div>
`;
---

<section id="toolkit"class="py-32 bg-black relative">
  
  <div class="absolute inset-0 bg-[linear-gradient(to_right,#ffffff03_1px,transparent_1px),linear-gradient(to_bottom,#ffffff03_1px,transparent_1px)] bg-size[4rem_4rem] pointer-events-none"></div>

  <div class="container mx-auto px-6 relative z-10">
    
    <div class="mb-20">
      <h2 class="text-4xl md:text-6xl font-display font-bold text-white mb-4">
        THE <span class="text-lime">TOOLKIT</span>
      </h2>
      <p class="text-subtext font-mono text-sm">
        > SYSTEM_CAPABILITIES_ANALYSIS <br/>
        > Pełne spektrum kompetencji: od kodu, przez AI, po biznes.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 auto-rows-[minmax(240px,auto)]">
      
      <div class={`${BoxStyles} md:row-span-2`}>
        <Fragment set:html={TechCorners} />
        
        <div>
          <div class="absolute top-0 right-0 p-6 opacity-10 group-hover:opacity-20 transition-opacity">
              <svg width="60" height="60" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1"><path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/></svg>
          </div>
          <h3 class={TitleStyles}>{skills.frontend.title}</h3>
          <p class={DescStyles}>{skills.frontend.desc}</p>
        </div>
        <div class="flex flex-wrap content-start">
          {skills.frontend.stack.map(tech => (
            <span class={TagStyles}>{tech}</span>
          ))}
        </div>
      </div>

      <div class={`${BoxStyles} md:col-span-2`}>
        <Fragment set:html={TechCorners} />
        
        <div>
          <div class="absolute top-0 right-0 p-6 opacity-10 group-hover:opacity-20 transition-opacity">
              <svg width="60" height="60" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1"><path d="M12 2a10 10 0 1 0 10 10H12V2z"/><path d="M12 12L2.1 12.5"/></svg>
          </div>
          <h3 class={TitleStyles}>{skills.ai.title}</h3>
          <p class={DescStyles}>{skills.ai.desc}</p>
        </div>
        <div class="flex flex-wrap">
          {skills.ai.stack.map(tech => (
            <span class={`${TagStyles} border-lime/20 text-lime/80`}>{tech}</span>
          ))}
        </div>
      </div>

      <div class={`${BoxStyles}`}>
        <Fragment set:html={TechCorners} />
        
        <div>
          <h3 class={TitleStyles}>{skills.backend.title}</h3>
          <p class={DescStyles}>{skills.backend.desc}</p>
        </div>
        <div class="flex flex-wrap">
          {skills.backend.stack.map(tech => (
            <span class={TagStyles}>{tech}</span>
          ))}
        </div>
      </div>

      <div class={`${BoxStyles}`}>
        <Fragment set:html={TechCorners} />
        
        <div>
          <h3 class={TitleStyles}>{skills.creative.title}</h3>
          <p class={DescStyles}>{skills.creative.desc}</p>
        </div>
        <div class="flex flex-wrap">
          {skills.creative.stack.map(tech => (
            <span class={TagStyles}>{tech}</span>
          ))}
        </div>
      </div>

    </div>

  </div>
</section>