---
import timelineData from '../../data/timeline.json';

// Definiujemy typ kluczy, żeby TypeScript nie krzyczał
type CategoryType = "sport" | "sales" | "tech" | "current";

// Mapowanie kolorów (Zgodnie z briefem)
const categoryColors: Record<CategoryType, string> = {
  sport: "border-white/30 text-white",
  sales: "border-orange-500/50 text-orange-500",
  tech: "border-blue-500/50 text-blue-500",
  current: "border-lime text-lime"
};
---

<section id="about" class="py-32 bg-void relative overflow-hidden">
  
  <div class="absolute left-0 top-0 w-full h-full bg-[radial-gradient(circle_at_top_right,rgba(204,255,0,0.03),transparent_40%)] pointer-events-none"></div>

  <div class="container mx-auto px-6">
    
    <div class="mb-20 max-w-4xl">
      <h2 class="text-4xl md:text-6xl font-display font-bold text-white mb-6">
        THE <span class="text-lime">ORIGIN</span> STORY
      </h2>
      <p class="text-subtext font-mono text-sm md:text-base max-w-2xl leading-relaxed border-l-2 border-white/10 pl-6">
        > SYSTEM_LOGS_RETRIEVED <br />
        > ANALIZA ŚCIEŻKI: Od sportowej dyscypliny, przez brutalną szkołę sprzedaży, aż po inżynierię oprogramowania.
      </p>
    </div>

    <div class="relative border-l border-white/10 ml-4 md:ml-10 space-y-16">
      
      {timelineData.map((item, index) => {
        // Bezpieczne pobranie kolorów
        const colorClass = categoryColors[item.category as CategoryType] || "border-white text-white";
        const borderColor = colorClass.split(' ')[0]; 
        
        return (
          <div class="relative pl-8 md:pl-16 group">
            
            <div class={`absolute -left-[5px] top-2 w-2.5 h-2.5 bg-void border ${borderColor} rounded-full group-hover:scale-150 group-hover:bg-lime transition-all duration-300 z-10`}></div>
            
            <span class="font-mono text-xs text-subtext mb-2 block tracking-widest opacity-70">
              [{item.year}]
            </span>

            <div class="relative">
              <h3 class={`text-2xl md:text-3xl font-display font-bold mb-2 transition-colors group-hover:text-lime ${index === timelineData.length - 1 ? 'text-lime' : 'text-white'}`}>
                {item.title}
              </h3>
              
              <div class="inline-block px-3 py-1 mb-4 border border-white/10 bg-white/5 text-[10px] font-mono uppercase tracking-wider text-white/80 rounded-sm">
                {item.role}
              </div>

              <p class="text-subtext text-sm md:text-base leading-relaxed max-w-2xl">
                {item.desc}
              </p>
            </div>

          </div>
        )
      })}

      <div class="relative pl-8 md:pl-16 pt-8">
        <div class="absolute -left-[3px] top-0 w-1.5 h-1.5 bg-lime animate-pulse"></div>
        <p class="font-mono text-xs text-lime animate-pulse">
          > AWAITING_NEXT_CHALLENGE...
        </p>
      </div>

    </div>

  </div>
</section>